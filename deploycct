#!/bin/bash

# CollegeBlackjackTour Quick Deploy Command
# Usage: /deploycct

echo "ğŸ° CCT Quick Deploy Started..."

# Navigate to project directory
cd /Users/jacksonfitzgerald/Documents/CollegiateCasinoLeague/collegeblackjacktour

# Check if we're in the right directory
if [ ! -f "package.json" ]; then
    echo "âŒ Error: Not in the CCT project directory"
    exit 1
fi

# Check for uncommitted changes and commit them
if [[ -n $(git status -s) ]]; then
    echo "ğŸ“ Uncommitted changes detected. Committing..."
    git add -A
    git commit -m "Deploy: Auto-commit before deployment $(date +'%Y-%m-%d %H:%M:%S')"
fi

# Push to GitHub (for Koyeb deployment)
echo "ğŸ“¤ Pushing to GitHub..."
git push origin main

if [ $? -ne 0 ]; then
    echo "âš ï¸  Git push failed. Attempting force push..."
    git push origin main --force
    
    if [ $? -ne 0 ]; then
        echo "âŒ Git push failed! Please resolve conflicts manually."
        exit 1
    fi
fi

echo "âœ… Pushed to GitHub successfully!"
echo "ğŸ”„ Koyeb will auto-deploy from GitHub..."

# Run the deployment to Firebase as backup/staging
echo "ğŸ—ï¸  Building production bundle..."
npm run build

if [ $? -ne 0 ]; then
    echo "âŒ Build failed! Check errors above."
    exit 1
fi

echo "ğŸš€ Deploying to Firebase (staging)..."
firebase deploy --only hosting

if [ $? -eq 0 ]; then
    echo "âœ… Deployment successful!"
    echo "ğŸŒ Firebase (staging): https://collegeblackjacktour.firebaseapp.com"
    echo "ğŸŒ Koyeb (production): https://collegecasinotour.com"
    echo "ğŸ“Š Monitor Koyeb deployment at: https://app.koyeb.com/"
    open https://collegecasinotour.com
else
    echo "âŒ Firebase deployment failed!"
    exit 1
fi