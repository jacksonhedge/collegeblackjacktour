{
  "name": "bankroll-website",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "vite --port 4001",
    "dev:supabase": "vite --config vite.config.supabase.js",
    "server": "nodemon server.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run server\"",
    "build": "vite build && node copyImages.js",
    "start": "node server.js",
    "preview": "vite preview",
    "predeploy": "rm -rf dist && npm run build && node remove-hash-redirect.js",
    "deploy": "firebase deploy --only hosting:bankroll-live",
    "deploy:koyeb": "npm run build && echo 'Build complete - ready for Koyeb deployment'",
    "deploy:surge": "npm run build && cd dist && surge",
    "deploy:vercel": "npm run build && vercel --prod",
    "deploy:netlify": "npm run build && netlify deploy --prod --dir=dist",
    "start:production": "serve -s dist -l ${PORT:-8080}"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.10",
    "@sendgrid/mail": "^8.1.5",
    "@supabase/supabase-js": "^2.44.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "d3": "^7.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^4.19.2",
    "firebase": "^10.8.0",
    "framer-motion": "^12.15.0",
    "helmet": "^7.1.0",
    "lucide-react": "^0.363.0",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.3",
    "posthog-js": "^1.248.1",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-force-graph-2d": "^1.23.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^6.22.0",
    "tailwind-merge": "^2.5.4",
    "twilio": "^5.6.1",
    "uuid": "^11.1.0"
  },
